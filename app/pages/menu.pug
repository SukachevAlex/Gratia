    body
        header.header.header_white
            div.container
                nav.navigation.navigation__header
                    a.logo__wrapper(href="#")
                        img.logo.logo__header(src="../img/header/logo.png" srcset="../img/header/logo@2x.png 2x" alt="Gratia logo")
                        span.logo__name.logo__name_black Gratia
                    ul.menu.menu__header
                        li.menu__item
                            a.menu__link.menu__link_black(href="index.html") About
                        li.menu__item
                            a.menu__link.menu__link_black.menu__link_active(href="#") Menu
                        li.menu__item
                            a.menu__link.menu__link_black(href="#") Gallery
                        li.menu__item
                            a.menu__link.menu__link_black(href="#") Contact
        main
            section.section-reserve
                div.container
                    div.title__wrapper
                        div.section__title Menu
                        div.section__sub-title Executive Chef has created seasonal menus.
                    div.menu__gallery
                        a.dish.popup__link(href="#popup_main-dishes")
                            img.dish__photo(src="../img/menu/photo_1.jpg" alt="Photo Main Dishes")
                            div.dish__info
                                p.dish__name Main Dishes
                                p.dish__description The main dish is usually the heaviest, heartiest, and most complex or substantial dish on a menu.
                        a.dish.popup__link(href="#popup_soups")
                            img.dish__photo(src="../img/menu/photo_2.jpg" alt="Photo Main Dishes")
                            div.dish__info
                                p.dish__name Soups
                                p.dish__description Soup is a primarily liquid food, generally served warm or hot
                        a.dish.popup__link(href="#popup_hamburgers")
                            img.dish__photo(src="../img/menu/photo_3.jpg" alt="Photo Soups")
                            div.dish__info
                                p.dish__name Hamburgers
                                p.dish__description Sandwich consisting of one or more cooked patties of ground meat, usually beef, placed inside a sliced bread roll or bun.
                        a.dish.popup__link(href="#popup_desserts")
                            img.dish__photo(src="../img/menu/photo_4.jpg" alt="Photo Hamburgers")
                            div.dish__info
                                p.dish__name Desserts
                                p.dish__description Confectionery course that concludes a main meal.
                        a.dish.popup__link(href="#popup_barbecue")
                            img.dish__photo(src="../img/menu/photo_5.jpg" alt="Photo Desserts")
                            div.dish__info
                                p.dish__name Barbecue
                                p.dish__description Both a cooking method and an apparatus/machine.
                        a.dish.popup__link(href="#popup_salads")
                            img.dish__photo(src="../img/menu/photo_6.jpg" alt="Photo Salads")
                            div.dish__info
                                p.dish__name Salads
                                p.dish__description dish consisting of a mixture of small pieces of food, usually vegetables.

        footer.footer
            div.logo__footer
            div.brand.brand__footer Gratia Restaurant
            ul.social
                li.social__item
                    a.social__link.social__link_facebook(href="https://facebook.com")
                li.social__item
                    a.social__link.social__link_whatsapp(href="https://whatsapp.com")
                li.social__item
                    a.social__link.social__link_instagram(href="https://instagram.com/")


        div.mfp-hide.popup.popup_main-dishes#popup_main-dishes
            div.dish__card
                div.popup__close X
                img.popup__photo(src="../img/menu/popup_photo_1.jpg" alt="Main dishes photo")
                div.popup__info
                    div.dish__name Stuffed Peppers
                    div.dish__description Chef John's Stuffed Peppers
                    div.popup__line
                    div.dish__components
                        div.component__title Components
                        div.component__list Onion diced  olive oil   marinara sauce  beef broth  balsamic vinegar  crushed red pepper flakes
                    div.popup__line
                    div.dish__price
                        div.price__number 15$
                        div.price__tag Total cost
        div.mfp-hide.popup.popup_soups#popup_soups
            div.dish__card
                div.popup__close X
                img.popup__photo(src="../img/menu/popup_photo_2.jpg" alt="Soups photo")
                div.popup__info
                    div.dish__name Chicken Taco Soup
                    div.dish__description Slow Cooker Chicken Taco Soup
                    div.popup__line
                    div.dish__components
                        div.component__title Components
                        div.component__list onion chopped  chili beans black beans whole kernel corn drained tomato sauce  beer
                    div.popup__line
                    div.dish__price
                        div.price__number 8$
                        div.price__tag Total cost
        div.mfp-hide.popup.popup_hamburgers#popup_hamburgers
            div.dish__card
                div.popup__close X
                img.popup__photo(src="../img/menu/popup_photo_3.jpg" alt="Hamburger photo")
                div.popup__info
                    div.dish__name Chicken burger
                    div.dish__description Chicken Burgers with Crispy Cheddar Cheese.
                    div.popup__line
                    div.dish__components
                        div.component__title Components
                        div.component__list chicken breast fillet, marinated overnight accompained with tomato cos lettuce & Spanish red onion
                    div.popup__line
                    div.dish__price
                        div.price__number 11$
                        div.price__tag Total cost
        div.mfp-hide.popup.popup_desserts#popup_desserts
            div.dish__card
                div.popup__close X
                img.popup__photo(src="../img/menu/popup_photo_4.jpg" alt="Desserts photo")
                div.popup__info
                    div.dish__name Covered Strawberries
                    div.dish__description Chocolate Covered Strawberries
                    div.popup__line
                    div.dish__components
                        div.component__title Components
                        div.component__list milk chocolate chips tablespoons shortening fresh strawberries with leaves
                    div.popup__line
                    div.dish__price
                        div.price__number 14$
                        div.price__tag Total cost
        div.mfp-hide.popup.popup_barbecue#popup_barbecue
            div.dish__card
                div.popup__close X
                img.popup__photo(src="../img/menu/popup_photo_5.jpg" alt="Barbecue photo")
                div.popup__info
                    div.dish__name Sausage Pizza
                    div.dish__description Barbecue Smoked Sausage Pizza
                    div.popup__line
                    div.dish__components
                        div.component__title Components
                        div.component__list Hillshire Farm Beef Smoked Sausage Italian pizza crust prepared barbecue sauce thinly sliced red onion  green bell pepper seeded cut into thin strips
                    div.popup__line
                    div.dish__price
                        div.price__number 20$
                        div.price__tag Total cost
        div.mfp-hide.popup.popup_salads#popup_salads
            div.dish__card
                div.popup__close X
                img.popup__photo(src="../img/menu/popup_photo_6.jpg" alt="Salads photo")
                div.popup__info
                    div.dish__name Spinach Salad
                    div.dish__description Strawberry Spinach Salad I
                    div.popup__line
                    div.dish__components
                        div.component__title Components
                        div.component__list sesame seeds poppy seeds  white sugar olive oil  distilled white vinegar paprika
                    div.popup__line
                    div.dish__price
                        div.price__number 10$
                        div.price__tag Total cost

